    <item>
      <title>Aglausについて</title>
      <link>http://rusnassonov.ru/themes/aglaus/content/post/about-aglaus-ja/</link>
      <pubDate>Tue, 06 Jan 2015 00:00:00 +0000</pubDate>
      
      <guid>http://rusnassonov.ru/themes/aglaus/content/post/about-aglaus-ja/</guid>
